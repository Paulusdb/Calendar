{% extends 'base.html.twig' %}

{% block title %}Appointment{% endblock %}

{% block page_subtitle %}Appointment{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ appointment.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ appointment.title }}</td>
            </tr>
            <tr>
                <th>Begin</th>
                <td>{{ appointment.begin ? appointment.begin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ appointment.end ? appointment.end|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Notification</th>
                <td>{{ appointment.notification ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary btn-sm" href="{{ path('appointment_edit', {'id': appointment.id}) }}" role="button">Edit Appointment</a>

    {{ include('appointment/_delete_form.html.twig') }}
{% endblock %}
